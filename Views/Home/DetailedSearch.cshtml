@model Chow_Patty_HW3.Models.SearchViewModel

@{
    ViewData["Title"] = "DetailedSearch";
}

<h1>DetailedSearch</h1>
<h4>SearchViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DisplaySearchResults" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedCategories" class="control-label"></label>
                <select asp-for="SelectedCategories" asp-items="Html.GetEnumSelectList<Category>()" class="form-control">
                    <option selected="selected" value="">All Categories</option>
                </select>
                <span asp-validation-for="SelectedCategories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedLangID" class="control-label"></label>
                @Html.DropDownListFor(model => model.SelectedLangID, (SelectList)ViewBag.AllLangs, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="SearchStarCount" class="control-label"></label><br />
                <input asp-for="SearchStarCount" class="form-control" />
                <span asp-validation-for="SearchStarCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SearchType" class="control-label"></label><br />
                <input type="radio" class="radio" asp-for="SearchType" value="@SearchType.GreaterThan" checked="checked" />&nbsp; Greater Than<br />
                <input type="radio" class="radio" asp-for="SearchType" value="@SearchType.LessThan" />Less Than<br />
            </div>
            <div class="form-group">
                <label asp-for="SelectedDate" class="control-label"></label>
                <input asp-for="SelectedDate" class="form-control" />
                <span asp-validation-for="SelectedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Home</a>
            </div>
        </form>
    </div>
</div>



